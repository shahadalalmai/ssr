<h1>Places#edit</h1>
<p>Find me in app/views/places/edit.html.erb</p>


<%= form_for @place, url: {action: "update"} do |f| %>
    
    <%= f.label :name, 'Place Name'%><br>
    <%= f.text_field :name %>
    <br>

    <%= f.label :desc, 'Review'%><br>
    <%= f.text_field :desc %>
    <br>

    <%= f.label :city, 'City'%><br>
    <%= f.text_field :city %>
    <br>

    <%= f.label :image, 'Image'%><br>
    <%= f.text_field :image %>
    <br>

    <%= f.label :location, 'Location'%><br>
    <%= f.text_field :location %>
    <br>
    

    <%= f.submit "Update" , data: {confirm: "Are you sure?"}%>

    <br>

<% end %>

<%= link_to "Back", place_path(@place)%>